	local account=$1

	if [[ "$account" == "docker" ]]; then
		GMAIL=$GMAIL2
		GMAIL_NAME=$GMAIL2_NAME
		GMAIL_PASS=$GMAIL2_PASS
		GMAIL_FROM=$GMAIL2_FROM
	fi

	docker run -it --rm \
		-e GMAIL \
		-e GMAIL_NAME \
		-e GMAIL_PASS \
		-e GMAIL_FROM \
		-v $HOME/.gnupg:/home/user/.gnupg \
		-v /etc/localtime:/etc/localtime:ro \
		--name mutt${account} \
		jess/mutt
	)
}
